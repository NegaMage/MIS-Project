<p id="notice"><%= notice %></p>

<h1>Circulars</h1>

<table>
  <thead>
    <tr>
      <th>Circular type</th>
      <th>From</th>
      <th>Keywords</th>
      <th>Receipt date</th>
      <th>Broadcast date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @circulars.each do |circular| %>
      <tr>
        <td><%= circular.circular_type %></td>
        <td><%= circular.from %></td>
        <td><%= circular.keywords %></td>
        <td><%= circular.receipt_date %></td>
        <td><%= circular.broadcast_date %></td>
        <td><%= link_to 'Show', circular %></td>
        <td><%= link_to 'Edit', edit_circular_path(circular) %></td>
        <td><%= link_to 'Destroy', circular, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

