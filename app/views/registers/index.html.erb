<p id="notice"><%= notice %></p>

<h1>Registers</h1>

<table>
  <thead>
    <tr>
      <th>Register type</th>
      <th>Deadline</th>
      <th>First reminder</th>
      <th>No of reminders</th>
      <th>Reminder period</th>
      <th>Reminder email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @registers.each do |register| %>
      <tr>
        <td><%= register.register_type %></td>
        <td><%= register.deadline %></td>
        <td><%= register.first_reminder %></td>
        <td><%= register.no_of_reminders %></td>
        <td><%= register.reminder_period %></td>
        <td><%= register.reminder_email %></td>
        <td><%= link_to 'Show', register %></td>
        <td><%= link_to 'Edit', edit_register_path(register) %></td>
        <td><%= link_to 'Destroy', register, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

